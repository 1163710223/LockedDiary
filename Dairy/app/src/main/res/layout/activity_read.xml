<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/images"
    tools:context="com.example.a91600.dairy.ReadActivity">


    <RelativeLayout
        android:id="@+id/title_read"
        android:background="#00000000"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/back_read"
            android:text="返回"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/delete_read"
            android:text="删除"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="24sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/date_read"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/title_read"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/content_read"
        android:textSize="20dp"
        android:lineSpacingExtra="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/date_read"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>
