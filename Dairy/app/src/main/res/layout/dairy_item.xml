<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="125dp">
    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_marginTop="5dp"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/dairy_date_day"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/dairy_date_weekday"
            android:layout_toRightOf="@id/dairy_date_day"
            android:layout_marginTop="10dp"
            android:layout_above="@id/dairy_date_yearandmonth"
            android:textSize="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/dairy_date_yearandmonth"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/dairy_date_day"
            android:textSize="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:layout_marginRight="5dp"
        android:background="#000000"
        android:layout_width="1dp"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/dairy_content"
        android:textSize="16dp"
        android:background="#FFFFFF"
        android:layout_margin="5dp"
        android:layout_weight="10"
        android:layout_width="0dp"
        android:layout_height="100dp" />
</LinearLayout>